@model AuthStore.Models.Employee

@{
    ViewData["Title"] = "Delete";
}
<div class="app-main__inner">
    <div class="card-body">
        <div class="row">
            <div class="card bg-deep-blue">
                <div class="card-header bg-primary text-uppercase text-center text-white">
                    <h1 class="bg-gradient-danger">Delete: </h1>
                    <h3>Are you sure you want to delete this Employee?</h3>
                </div>
                <div class="container mt-3">

                    <table class="table">
                        <thead class="bg-deep-blue">
                            <tr>
                                <th>Emp No.</th>
                                <th>Name</th>
                                <th>DOB</th>
                                <th>HiringDate</th>
                                <th>GrossSalary</th>
                                <th>NetSalary</th>
                                <th>Department</th>
                                <th>City</th>
                               <th></th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.EmployeeNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.EmployeeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.DOB)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.HiringDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.GrossSalary)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.NetSalary)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.Department.DepartmentName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => Model.City.CityName)
                                </td>


                                <td>
                                    <form asp-action="Delete">
                                        <input type="hidden" asp-for="EmployeeId" />
                                        <input type="submit" value="Delete" class="btn btn-sm btn-outline-danger" />
                                        <a asp-action="Index" class="btn btn-sm btn-outline-danger">Back to list</a>
                                    </form>
                                </td>

                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
