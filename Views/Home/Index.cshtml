@*@model IEnumerable<Product>*@
@model System.Collections.Generic.List<Product>
@using AuthStore.Models;
@using X.PagedList.Mvc.Common
@using X.PagedList.Mvc.Core
@*@model X.PagedList.IPagedList<Product>*@
@{
    ViewData["Title"] = "Home Page";
}

<div class="app-main__inner">
    <div class="app-page-title">
        <div class="page-title-wrapper">

            <div class="page-title-heading">
                <div class="page-title-icon-rounded">
                    <i class="fa-accessible-icon fa fa-table">
                    </i>
                </div>
                <div>
                    &nbsp;
                    Main Store items

                </div>
            </div>
            &nbsp;
            &nbsp;
            &nbsp;
            &nbsp;
            &nbsp;
            &nbsp;
            &nbsp;
            <img width="80" class="rounded-circle" src="~/ICO/Manager.png" alt="">
            <h1 class="font-weight-bolder text-info text-gradient">Welcome to Store </h1>
            <div class="page-title-actions">
                @using (Html.BeginForm())
                {
                    <div class="search-wrapper">
                        <div class="input-holder">
                            <span>
                                <i>
                                    @Html.TextBox("SearchByName", null, new { Class = "search-input", Placeholder = "Type to search" })
                                </i>
                            </span>
                            <button type="button" class="search-icon">
                                <span>

                                </span>
                            </button>
                        </div>
                        <button type="button" class="close"></button>
                    </div>
                }
            </div>

        </div>
    </div>


    <div class="text-center">
        <div class="row">
            <div class="col-md-12">
                <div class="main-card mb-3 card bg-deep-blue">
                    <div class="card-body bg-deep-blue">
                        <div id="carouselExampleControls1" class="carousel slide" data-ride="carousel">
                            <div class="row">
                                @foreach (var product in Model)
                                {
                                    <div class="col-4">
                                        <div class="card mb-4 bg-deep-blue">
                                            <div class="card-header">
                                                <h4 class="my-0 font-weight-normal">
                                                    <label style="font-size: 23px;color: steelblue">@product.ProductName</label>
                                                </h4>
                                            </div>
                                            <img src="~/Images/@product.ImageUrl" alt="Card Image" class="card-img-top" style="height: 300px;" />
                                            <div class="card-header">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div class="btn-group">
                                                        <label style="font-size: 14px; color: steelblue"><b>Price : @product.Price</b></label>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="col-12 btn-group">
                                                            <div class="col-6 form-group text-left p-2">
                                                                <a asp-action="Detail" asp-controller="Home" asp-route-id="@product.ProductId" class="btn btn-success">Deatils</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

