@model AuthStore.Models.Message

@{
    ViewData["Title"] = "Create";
}

<div class="app-main__inner">
    <div class="col-11 max-auto pt-0">
        <div class="card">
            <div class="card-header bg-primary text-uppercase text-center text-white">
                <h4>Send Message</h4>
            </div>
            <div class="card-body bg-deep-blue">
                <form enctype="multipart/form-data" asp-action="Create" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Emaile" class="control-label"></label>
                                <input type="email" asp-for="Emaile" class="form-control" />
                                <span asp-validation-for="Emaile" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Phone" class="control-label"></label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Mobaile" class="control-label"></label>
                                <input asp-for="Mobaile" class="form-control" />
                                <span asp-validation-for="Mobaile" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Msg" class="control-label"></label>
                                <textarea class="form-control" asp-for="Msg" rows="5" cols="20"></textarea>
                                <span asp-validation-for="Msg" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12 btn-group">


                            <div class="col-6 form-group text-left p-2">
                                <input type="submit" value="Send" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
