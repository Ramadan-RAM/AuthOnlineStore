@model IEnumerable<AuthStore.Models.Message>

@{
    ViewData["Title"] = "Index";
}

<div class="app-main__inner">
    <div class="card-body">
        <div class="row">
            <div class="card bg-deep-blue">
                <div class="card-header bg-primary text-uppercase text-center text-white">
                    <h4>Messages</h4>
                </div>
                <div class="container mt-2">

                    <table class="table">
                        <thead class="bg-deep-blue">
                            <tr>
                                <th>Name</th>
                                <th>Phone</th>
                                <th>Mobaile</th>
                                <th>Emaile</th>
                                <th>Message</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Phone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Mobaile)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Emaile)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Msg)
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>