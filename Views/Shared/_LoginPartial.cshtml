@using Microsoft.AspNetCore.Identity
@using AuthStore.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager


<div class="header-btn-lg pr-0">
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="widget-content p-0">

            <div class="widget-content-wrapper">

                <div class="widget-content-left">

                    <div class="btn-group">
                        <a data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="p-0 btn" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                            <img width="42" class="rounded-circle" src="~/ICO/Admin.png" alt="">

                            Hello @User.Identity.Name!
                        </a>

                        <div class="widget-content-left  ml-3 header-user-info">
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Messagesses", new { area = "" })">
                                <button type="submit" class="btn btn-outline-danger">Logout</button>
                            </form>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    }
    else
    {
        <div class="widget-content-left  ml-3 header-user-info">
            <a class="btn btn-outline-success" asp-area="Identity" asp-page="/Account/Login">
                Login
            </a>
        </div>

    }
</div>

